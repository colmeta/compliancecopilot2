# ==============================================================================
# CLARITY ENGINE - ENVIRONMENT VARIABLES (LAUNCH CONFIGURATION)
# ==============================================================================
# Generated: 2025-11-10
# Purpose: Complete environment setup for production launch on Render
# ==============================================================================

# ==============================================================================
# üî• CRITICAL KEYS (REQUIRED FOR LAUNCH)
# ==============================================================================

# --- Database (Render will provide this automatically) ---
DATABASE_URL=your_database_url_from_render

# --- Flask Secret Key (Generate with: python -c "import secrets; print(secrets.token_hex(32))") ---
FLASK_SECRET_KEY=your_super_secret_key_change_this_to_something_very_secure_and_random

# --- Primary LLM (REQUIRED) ---
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_gemini_api_key_here

# ==============================================================================
# üéØ MULTI-MODAL PROCESSING (OCR - You have this!)
# ==============================================================================

# --- Google Cloud Vision OCR (Premium OCR) ---
# This is the key you just got! Add it here:
GOOGLE_VISION_API_KEY=YOUR_GOOGLE_CLOUD_VISION_API_KEY_HERE

# Enable OCR processing
ENABLE_OCR_PROCESSING=true

# ==============================================================================
# üöÄ RECOMMENDED KEYS (Multi-LLM Failover for Presidential Quality)
# ==============================================================================

# --- OpenAI GPT-4 (Best quality for complex tasks) ---
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_key_here

# --- Anthropic Claude (Excellent reasoning) ---
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_key_here

# --- Groq (Ultra-fast, free tier) ---
# Get from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_key_here

# ==============================================================================
# üìß EMAIL CONFIGURATION (For Results Delivery)
# ==============================================================================

# Gmail SMTP (recommended for testing)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_gmail_app_specific_password
MAIL_DEFAULT_SENDER=noreply@claritypearl.com
ENABLE_EMAIL_DELIVERY=true

# ==============================================================================
# üéôÔ∏è OPTIONAL AUDIO TRANSCRIPTION (Pro Features)
# ==============================================================================

# Google Cloud Speech-to-Text
GOOGLE_SPEECH_API_KEY=your_google_speech_key_here

# AssemblyAI (Premium transcription)
ASSEMBLYAI_API_KEY=your_assemblyai_key_here

# Enable audio processing
ENABLE_AUDIO_PROCESSING=true

# ==============================================================================
# üèõÔ∏è PRESIDENTIAL-GRADE FEATURES
# ==============================================================================

# Outstanding Writing System (5-pass presidential quality)
ENABLE_OUTSTANDING_MODE=true
OUTSTANDING_DOMAINS=legal,financial,funding,security,proposal,technical,executive

# AI Optimization
ENABLE_MODEL_ROUTING=true
ENABLE_RESPONSE_CACHE=true
ENABLE_AI_OPTIMIZATION=true
ENABLE_PROMPT_OPTIMIZATION=true
ENABLE_COST_OPTIMIZATION=true

# Default Model Configuration
DEFAULT_MODEL=gemini-1.5-flash
DEFAULT_MODEL_SELECTION_STRATEGY=cost_quality_balanced

# ==============================================================================
# üîê SECURITY & COMPLIANCE (Enterprise Features)
# ==============================================================================

# Audit Logging
ENABLE_AUDIT_LOGGING=true
ENABLE_PII_DETECTION=true
DATA_RETENTION_DAYS=2555

# CORS Configuration
CORS_ORIGINS=*

# ==============================================================================
# üíº TIER SYSTEM & LIMITS
# ==============================================================================

DEFAULT_TIER=free
ENFORCE_TIER_LIMITS=true

# ==============================================================================
# üìä ANALYTICS & MONITORING
# ==============================================================================

ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=365
COST_TRACKING_ENABLED=true
MODEL_PERFORMANCE_TRACKING_ENABLED=true

# ==============================================================================
# üß™ A/B TESTING CONFIGURATION
# ==============================================================================

PROMPT_AB_TESTING_ENABLED=true
AB_TESTING_MIN_DURATION_DAYS=7
AB_TESTING_MAX_DURATION_DAYS=30
AB_TESTING_SIGNIFICANCE_LEVEL=0.05

# ==============================================================================
# üö® ALERTS & NOTIFICATIONS
# ==============================================================================

ENABLE_OPTIMIZATION_ALERTS=true
OPTIMIZATION_ALERT_EMAIL=nsubugacollin@gmail.com
COST_ALERT_THRESHOLD_MONTHLY=100.0

# ==============================================================================
# ‚ö° PERFORMANCE OPTIMIZATION
# ==============================================================================

# Caching
CACHE_TTL_SECONDS=3600
CACHE_SIMILARITY_THRESHOLD=0.85
CACHE_MAX_ENTRIES_PER_USER=1000

# Chunking
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
ENABLE_ADVANCED_CHUNKING=true
DEFAULT_CHUNKING_STRATEGY=dynamic

# ==============================================================================
# üåê COLLABORATION FEATURES (Optional - Requires Redis)
# ==============================================================================

# Redis (add if using real-time collaboration)
# REDIS_URL=redis://username:password@host:6379
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0
# SOCKETIO_MESSAGE_QUEUE=redis://localhost:6379/2

ENABLE_WORKSPACES=true
ENABLE_REAL_TIME_COLLAB=false

# ==============================================================================
# üé® FRONTEND CONFIGURATION
# ==============================================================================

# Your frontend will need this in Vercel:
# NEXT_PUBLIC_API_URL=https://your-backend.onrender.com

